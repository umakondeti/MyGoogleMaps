<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llv_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <com.example.umamaheshwari.mygooglemaps.CircularImageView
                android:id="@+id/iv_pic_circle"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/maps"
                style="@style/contacts_image"/>
            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Display Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/et_display_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIKLMNOPQRSTUVWXYZ" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"/>
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Phone Number"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"/>
            <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Gender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
            <EditText
                android:id="@+id/et_gender"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"/>
            <TextView
                android:id="@+id/tv_paasword"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:password="true"/>
            <TextView
                android:id="@+id/tv_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Confirm Password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:password="true"/>
            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="#4279BD"
                android:textColor="#fff"
                android:onClick="signUp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
